<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LLCiclo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/list_selector">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="@dimen/appbar_padding_top"
			android:id="@+id/image_view"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/appbar_padding_top"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="@style/TextAppearance.AppCompat.Body2"
				android:text="@string/prompt_convalidacionposibleensolicitud_convalidar"
				android:layout_marginTop="@dimen/appbar_padding_top"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:id="@+id/textview_convalidacionposibleensolicitud_list_item_estudioconvalidado"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="@style/TextAppearance.AppCompat.Body2"
				android:text="@string/prompt_convalidacionposibleensolicitud_aportando"
				android:layout_marginTop="@dimen/appbar_padding_top"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:id="@+id/textview_convalidacionposibleensolicitud_list_item_estudioaportado"
				/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>